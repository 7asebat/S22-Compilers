<?xml version="1.0" encoding="utf-8"?> 
<AutoVisualizer xmlns="http://schemas.microsoft.com/vstudio/debugger/natvis/2010">
  <Type Name="compiler::Expr">
    <DisplayString Comparison="kind == compiler::Expr::LITERAL">{{LITERAL={as_literal.value}}}</DisplayString>
    <DisplayString Comparison="kind == compiler::Expr::IDENTIFIER">{{ID={as_id.name}}}</DisplayString>
    <DisplayString Comparison="kind == compiler::Expr::OP_BINARY">{{BINARY={as_binary.kind}}}</DisplayString>
    <DisplayString Comparison="kind == compiler::Expr::OP_UNARY">{{UNARY={as_unary.kind}}}</DisplayString>
    <DisplayString Comparison="kind == compiler::Expr::OP_ASSIGN">{{ASSIGNMENT={as_assign.kind}}}</DisplayString>

    <Expand>
      <ExpandedItem Comparison="kind == compiler::Expr::LITERAL">as_literal</ExpandedItem>
      <ExpandedItem Comparison="kind == compiler::Expr::IDENTIFIER">as_id</ExpandedItem>
      <ExpandedItem Comparison="kind == compiler::Expr::OP_BINARY">as_binary</ExpandedItem>
      <ExpandedItem Comparison="kind == compiler::Expr::OP_UNARY">as_unary</ExpandedItem>
      <ExpandedItem Comparison="kind == compiler::Expr::OP_ASSIGN">as_assign</ExpandedItem>
    </Expand>
  </Type>

  <Type Name="std::variant&lt;compiler::Symbol,compiler::Scope&gt;">
    <Intrinsic Name="index" Expression="(int)_Which"/>
    <DisplayString Comparison="_Which == 0">SYMBOL={{{_Head}}}</DisplayString>
    <DisplayString Comparison="_Which == 1">SCOPE={{{_Tail._Head}}}</DisplayString>

    <Expand>
      <ExpandedItem Comparison="_Which == 0">_Head</ExpandedItem>
      <ExpandedItem Comparison="_Which == 1">_Tail._Head</ExpandedItem>
    </Expand>

  </Type>
</AutoVisualizer> 